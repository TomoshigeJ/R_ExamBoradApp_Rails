<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to '編集', '#', class: 'btn btn-success float-right' %>
      <table class="table">
        <tr>
          <th scope="row"><%= t('.email') %></th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('.full_name') %></th>
          <td><%= @user.decorate.full_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('.avatar') %></th>
          <td><%= image_tag @user.avatar_url, size: '40x40', class: 'rounded-circle mr15'%></td>
        </tr>
      </table>
    </div>
  </div>
</div>
